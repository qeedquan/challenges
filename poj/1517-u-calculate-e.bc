define fact(n) {
	if (n < 0)
		return 0;
	if (n < 2)
		return 1;
	return n*fact(n-1);
}

define exp(n) {
	r = 1.0;
	for (i = 1; i <= n; i++) {
		r += 1.0 / fact(i);
	}
	return r;
}

for (x = 0; x < 10; x++) {
	print x; " "; exp(x);
}
halt;

